{
  "name": "Veyra Protocol",
  "version": "1.0.0",
  "description": "Incentivized credential verification protocol built on Moca Chain",
  "main": "index.js",
  "scripts": {
    "dev": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "preview": "cd frontend && npm run preview",
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "deploy": "npx hardhat run scripts/deploy.js --network moca",
    "install-all": "npm install && cd frontend && npm install"
  },
  "keywords": [
    "moca",
    "blockchain",
    "credentials",
    "verification",
    "incentives",
    "rewards",
    "staking",
    "defi"
  ],
  "author": "Veyra Protocol Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "hardhat": "^2.19.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "dotenv": "^17.2.3"
  }
}
